<h1 class="display-4 py-3 mb-3 border-bottom">
  <%= title %>
</h1>

<h2 class="my-4">Projects</h2>

<div class='row my-5'>
  <ol class='list-group list-group-horizontal flex-wrap col-md-12'>
    <% @project_dirs.each do |dir| %>
    <li class='list-group-item btn btn-danger m-3 border'>
      <div>
        <a href='<%= url("/projects/#{dir}") %>' class="text-center">
          <i class='fas fa-fw fa-graduation-cap  fa-5x '></i>
          <p><%= dir.gsub('_', ' ').capitalize %><p/>
            <a href='<%= url("/delete/#{dir}") %>' class="nav-link active" aria-current="page">
              <svg class="bi me-2" width="3" height="8"><use xlink:href="#delete"></use></svg>
              Delete Project    
            </a>
            <a href= '<%= url("/edit/#{dir}") %>'' class="nav-link link-dark">
              <svg class="bi me-2" width="3" height="8"><use xlink:href="#edit"></use></svg>
              Edit Icon   
            </a>
        </a>
        
      </div>
    </li>
    
    <% end %>
  </ol>
</div>

